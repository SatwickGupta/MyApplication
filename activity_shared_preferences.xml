<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/et_enter_mail_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/round_button_white_smoke"
        android:gravity="center_horizontal"
        android:hint="Enter your Mail ID"
        android:padding="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

     <EditText
         android:id="@+id/et_enter_password"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         app:layout_constraintTop_toBottomOf="@+id/et_enter_mail_id"
         android:hint="Enter Your Password"
         android:textColor="@color/black"
         android:gravity="center_horizontal"
         android:background="@drawable/round_button_white_smoke"
         android:padding="10dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         />
    <EditText
        android:id="@+id/et_enter_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/et_enter_password"
        android:hint="Enter Your mobile number"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:background="@drawable/round_button_white_smoke"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
       <Button
           android:id="@+id/btn_save"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/et_enter_mobile_number"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginTop="20dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="20dp"
           android:text="Save"
           android:onClick="Save"
           android:textColor="@color/black"
           android:background="@drawable/round_button_pink"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintVertical_bias="0"
           />
       <Button
           android:id="@+id/btn_clear"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@+id/et_enter_mobile_number"
           android:layout_marginTop="20dp"
           app:layout_constraintStart_toEndOf="@id/btn_save"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:onClick="Clear"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintVertical_bias="0"
           android:text="Clear"
           android:textColor="@color/black"
           android:background="@drawable/round_button_pink"
           />
      <Button
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/et_enter_mobile_number"
          app:layout_constraintStart_toEndOf="@+id/btn_clear"
          android:layout_marginTop="20dp"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:text="Retreive"
          android:onClick="Retreive"
          android:textColor="@color/black"
          android:background="@drawable/round_button_pink"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintVertical_bias="0"
          />


</androidx.constraintlayout.widget.ConstraintLayout>